{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "cleanUrls": true,
    "rewrites": [{
      "source": "/api/fetch-posts",
      "function": "fetchPosts"
    }, {
      "source": "**",
      "destination": "/index.html"
    }]
  }
}
